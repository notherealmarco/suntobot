# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Comma-separated list of admin user IDs who can manage groups
# To get your user ID: send a message to @userinfobot on Telegram
ADMIN_IDS=

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=

# LLM Configuration
# OpenAI API configuration
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=

# Model Configuration
# Model used for text summaries (default: gpt-4o-mini)
SUMMARY_MODEL=gpt-4o-mini
# Model used for image analysis (default: gpt-4o-mini)
IMAGE_MODEL=gpt-4o-mini

# Mention Reply Configuration
# Number of recent messages to consider when bot is mentioned (default: 30)
MENTION_CONTEXT_SIZE=30
# Hours of context to look back when bot is mentioned (default: 4)
MENTION_CONTEXT_HOURS=4
# Number of older messages to include for context (default: 10)
OLD_MENTION_CONTEXT_SIZE=10

# Image Analysis Configuration
# Enable or disable image analysis functionality (default: true)
IMAGE_ANALYSIS_ENABLED=true

# Summary Processing Configuration
# Number of messages per chunk for large summaries (default: 70)
SUMMARY_CHUNK_SIZE=70
# Maximum number of chunks to process in parallel (default: 2)
MAX_PARALLEL_CHUNKS=2
# Maximum context tokens for LLM processing (default: 16000)
MAX_CONTEXT_TOKENS=16000
# Characters per token estimation (default: 4)
CHARS_PER_TOKEN=4

# Custom System Prompts (Optional)
# Custom system prompt for summary generation
# Available placeholders: {username} (requesting user), {time_range} (time period)
# SYSTEM_PROMPT=

# Custom system prompt for mention replies
# MENTION_SYSTEM_PROMPT=

# Custom system prompt for chunk processing (advanced)
# Available placeholders: {chunk_index}, {total_chunks}
# CHUNK_SYSTEM_PROMPT=

# Custom system prompt for meta-summary generation (advanced)
# Available placeholders: {num_chunks}
# META_SUMMARY_SYSTEM_PROMPT=

# Custom system prompt chunk preamble (advanced)
# SYSTEM_PROMPT_CHUNK_PREAMBLE=

# Custom meta-summary system prompt suffix (advanced)
# Available placeholders: {time_range}
# META_SUMMARY_SYSTEM_PROMPT_SUFFIX=
